<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName='de.nak.productlist.controller.List'>
    <Page title="{i18n>main.PageTitle}">
        <content>
            <List headerText="{i18n>main.headerText}"
                  items="{ path: 'product>/ProduktSet'}"
                  growing="true"
                  growingThreshold="100"
                  enableBusyIndicator="true">
                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>main.header}" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <StandardListItem title="{product>Matnr}"
                                  description="{product>Maktx}"
                                  press="onItemPress"
                                  type="Navigation"/>
            </List>
        </content>
    </Page>
</mvc:View>
