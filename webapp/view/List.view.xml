<mvc:View
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.f"
        xmlns:u="sap.ui.unified"
        xmlns:fb="sap.ui.comp.filterbar"
        xmlns:vm="sap.ui.comp.variants"
        controllerName='de.nak.productlist.controller.List'>

    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}">

        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <vm:VariantManagement standardItemText="{i18n>listPageTitle}">
                    </vm:VariantManagement>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader pinnable="true">
                <f:content>

                    <!--Standard FilterBar with FilterItem productId, productName and standardPrice-->
                    <fb:FilterBar reset="onReset" search="onFilterChange" useToolbar="true" showGoOnFB="true">
                        <fb:filterItems>
                            <fb:FilterItem name="A" label="{i18n>productId}">
                                <fb:control>
                                    <!--TODO: autocomplete-->
                                    <Input type="Text" id="eProductId" placeholder="{i18n>productIdPlaceholder}"/>
                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem name="B" label="{i18n>productName}">
                                <fb:control>
                                    <!--TODO: autocomplete-->
                                    <Input type="Text" id="eProductName" placeholder="{i18n>productNamePlaceholder}"/>
                                </fb:control>
                            </fb:FilterItem>
                            <fb:FilterItem name="C" label="{i18n>stdPrice}">
                                <fb:control>
                                    <ComboBox type="Text" id="slStdPrice" placeholder="{i18n>stdPricePlaceholder}">
                                        <items>
                                            <core:Item key="001" text="{i18n>stdPriceCategory1}"/>
                                            <core:Item key="002" text="{i18n>stdPriceCategory2}"/>
                                            <core:Item key="003" text="{i18n>stdPriceCategory3}"/>
                                            <core:Item key="004" text="{i18n>stdPriceCategory4}"/>
                                        </items>
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterItem>

                        </fb:filterItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                    id="idProductsTable"
                    inset="false"
                    items="{
                            path: 'product>/ProduktSet'
                        }">
                <headerToolbar>
                    <Toolbar>
                        <ToolbarSpacer/>
                        <Button tooltip="View Settings" icon="sap-icon://sort" press="handleSortDialogButtonPressed" />
                    </Toolbar>
                </headerToolbar>


                <columns>
                    <Column id="columnProductId" sortProperty="{product>Matnr}">
                        <header>
                            <Label text="{i18n>productId}"/>
                        </header>
                    </Column>
                    <Column id="columnProductname">
                        <header>
                            <Label text="{i18n>productName}"/>
                        </header>
                    </Column>
                    <Column id="columnUnrestrictedStock">
                        <header>
                            <Label text="{i18n>unrestrictedStock}"/>
                        </header>
                    </Column>
                    <Column id="columnLastUpdate">
                        <header>
                            <Label text="{i18n>lastUpdate}"/>
                        </header>
                    </Column>
                    <Column id="columnPrice">
                        <header>
                            <Label text="{i18n>stdPrice}"/>
                        </header>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Active" id="item0" press="onItemPress">
                        <cells>
                            <Text text="{product>Matnr}"/>
                            <Text text="{product>Maktx}"/>
                            <Text text="{product>Lbkum}"/>
                            <Text text="{product>Laeda}"/>
                            <Text text="{product>Stprs} {product>Waers}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>

        <f:footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button type="Accept" text="Accept"/>
                <Button type="Reject" text="Reject"/>
            </OverflowToolbar>
        </f:footer>

    </f:DynamicPage>
</mvc:View>
