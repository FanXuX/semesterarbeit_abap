<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns:m="sap.m"
          xmlns="sap.uxap"
          xmlns:f="sap.ui.layout.form"
          xmlns:l="sap.ui.layout"
          xmlns:core="sap.ui.core"
          controllerName="de.nak.productlist.controller.Detail">


    <ObjectPageLayout id="detailPageLayout" showFooter="{= ${editModeView>/editing}}">
        <headerTitle>
            <ObjectPageHeader id="detailViewHeader"
                              headerDesign="Light"
                              responsive="true"
                              objectTitle="{product>Maktx}">
                <navigationBar>
                    <m:Bar>
                        <m:contentLeft>
                            <m:Button icon="sap-icon://nav-back" tooltip="nav-back" press="onNavButtonPress"/>
                        </m:contentLeft>
                        <m:contentMiddle>
                            <m:Text text="{i18n>detailPageTitle}"/>
                        </m:contentMiddle>
                    </m:Bar>
                </navigationBar>
                <actions>
                    <ObjectPageHeaderActionButton icon="sap-icon://edit" text="edit" importance="Medium"
                                                  tooltip="edit" press="onEdit"/>
                </actions>
            </ObjectPageHeader>
        </headerTitle>

        <headerContent>
            <l:VerticalLayout>
                <m:ObjectStatus title="{i18n>productId}" text="{product>Matnr}"/>
                <m:ObjectStatus title="{i18n>stdPrice}" text="{product>Stprs} {product>Waers}"/>
                <m:ObjectStatus title="{i18n>createdBy}" text="{product>Ernam}"/>
                <m:ObjectStatus title="{i18n>lastUpdate}" text="{product>Laeda}"/>
                <m:ObjectStatus title="{i18n>editedBy}" text="{product>Aenam}"/>
            </l:VerticalLayout>

            <l:VerticalLayout>
                <m:ObjectStatus text="{i18n>unrestrictedStock}" state="Success"/>
                <m:ObjectNumber number="{product>Labst}" numberUnit="{product>Meins}"/>
            </l:VerticalLayout>

            <l:VerticalLayout>
                <m:ObjectStatus text="{i18n>totalInventory}" state="None"/>
                <m:ObjectNumber number="{product>Lbkum}" numberUnit="{product>Meins}"/>
            </l:VerticalLayout>

        </headerContent>

        <sections>
            <ObjectPageSection title="{i18n>generalInformation}">
                <subSections>
                    <ObjectPageSubSection title="{i18n>generalInformation}">
                        <blocks>
                            <f:SimpleForm layout="ResponsiveGridLayout" editable="false">
                                <f:content>

                                    <core:Title text="Matrial Kurztext" level="H3"/>
                                    <!--<m:Label text="{i18n>productName}" labelFor="edit_Maktx"-->
                                             <!--visible="{= ${editModeView>/editing}}"/>-->
                                    <m:Text text="{product>Maktx}"/>
                                    <m:Input id="edit_Maktx" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             value="{
                                                path: 'product>Maktx',
                                                type : 'sap.ui.model.type.String',
                                                constraints : {
                                                    maxLength: 40
                                                }
                                             }"/>

                                    <core:Title text="{i18n>materialInfo}" level="H3"/>
                                    <m:Label text="{i18n>materialType}"/>
                                    <m:Text text="{product>Mtart}" value="{product>Mtart}"/>
                                    <m:Label text="{i18n>basicMaterial}" labelFor="edit_Wrkst"/>
                                    <m:Text text="{product>Wrkst}" visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Wrkst" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             value="{
                                                path: 'product>Wrkst',
                                                type : 'sap.ui.model.type.String',
                                                constraints : {
                                                    maxLength: 48
                                                }
                                             }"/>

                                    <core:Title text="{i18n>organizationStructure}" level="H3"/>
                                    <m:Label text="{i18n>branche}"/>
                                    <m:Text text="{product>Mbrsh}" value="{product>Mbrsh}"/>
                                    <m:Label text="{i18n>sector}" labelFor="edit_Spart"/>
                                    <m:Text text="{product>Spart}" visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Spart" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             value="{
                                                path: 'product>Spart',
                                                type : 'sap.ui.model.type.String',
                                                constraints : {
                                                    maxLength: 2
                                                }
                                             }"/>

                                    <core:Title text="{i18n>purchasingData}" level="H3"/>
                                    <m:Label text="{i18n>procurement}"/>
                                    <m:Text text="{product>Beskz}" value="{product>Beskz}"/>
                                    <m:Label text="{i18n>productCategory}" labelFor="edit_Matkl"/>
                                    <m:Text text="{product>Matkl}" visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Matkl" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             value="{
                                                path: 'product>Matkl',
                                                type : 'sap.ui.model.type.String',
                                                constraints : {
                                                    maxLength: 9
                                                }
                                             }"/>
                                </f:content>
                            </f:SimpleForm>

                        </blocks>
                    </ObjectPageSubSection>


                </subSections>
            </ObjectPageSection>

            <ObjectPageSection title="{i18n>technicalData}">
                <subSections>
                    <ObjectPageSubSection title="{i18n>technicalData}">
                        <blocks>
                            <f:SimpleForm layout="ResponsiveGridLayout" editable="false">
                                <f:content>
                                    <core:Title text="{i18n>dimensions}" level="H3"/>
                                    <m:Label text="{i18n>length}" labelFor="edit_Laeng"/>
                                    <m:Text text="{product>Laeng} {product>Meabm}"
                                            visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Laeng" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             description="{product>Meabm}"
                                             value="{
                                                path: 'product>Laeng',
                                                type : 'sap.ui.model.type.Float',
                                                constraints : {
                                                    minimum: 0,
                                                    maximum: 99999999
                                                }
                                             }"/>

                                    <m:Label text="{i18n>width}" labelFor="edit_Breit"/>
                                    <m:Text text="{product>Breit} {product>Meabm}"
                                            visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Breit" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             type="Number" description="{product>Meabm}"
                                             value="{
                                                path: 'product>Breit',
                                                type : 'sap.ui.model.type.Float',
                                                constraints : {
                                                    minimum: 0,
                                                    maximum: 99999999
                                                }
                                             }"/>

                                    <m:Label text="{i18n>height}" labelFor="edit_Hoehe"/>
                                    <m:Text text="{product>Hoehe} {product>Meabm}"
                                            visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Hoehe" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             type="Number" description="{product>Meabm}"
                                             value="{
                                                path: 'product>Hoehe',
                                                type : 'sap.ui.model.type.Float',
                                                constraints : {
                                                    minimum: 0,
                                                    maximum: 99999999
                                                }
                                             }"/>


                                    <core:Title text="{i18n>weight}" level="H3"/>
                                    <m:Label text="{i18n>grossWeight}" labelFor="edit_Brgew"/>
                                    <m:Text text="{product>Brgew} {product>Gewei}"
                                            visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Brgew" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             type="Number" description="{product>Gewei}"
                                             value="{
                                                path: 'product>Brgew',
                                                type : 'sap.ui.model.type.Float',
                                                constraints : {
                                                    minimum: 0,
                                                    maximum: 99999999
                                                }
                                             }"/>

                                    <m:Label text="{i18n>netWeight}" labelFor="edit_Ntgew"/>
                                    <m:Text text="{product>Ntgew} {product>Gewei}"
                                            visible="{= !${editModeView>/editing}}"/>
                                    <m:Input id="edit_Ntgew" valueLiveUpdate="true"
                                             liveChange="onInputChange" visible="{= ${editModeView>/editing}}"
                                             type="Number" description="{product>Gewei}"
                                             value="{
                                                path: 'product>Ntgew',
                                                type : 'sap.ui.model.type.Float',
                                                constraints : {
                                                    minimum: 0,
                                                    maximum: 99999999
                                                }
                                             }"/>

                                </f:content>
                            </f:SimpleForm>

                        </blocks>
                    </ObjectPageSubSection>

                </subSections>
            </ObjectPageSection>
        </sections>

        <footer>
            <m:Toolbar>
                <m:ToolbarSpacer/>
                <m:Button text="Save" type="Accept" press="onSave"/>
                <m:Button text="Abort" type="Reject" press="onAbort"/>
            </m:Toolbar>
        </footer>

    </ObjectPageLayout>

</mvc:View>
