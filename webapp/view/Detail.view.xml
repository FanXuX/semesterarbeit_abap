<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:semantic="sap.f.semantic"
          xmlns:f="sap.ui.layout.form"
          xmlns:l="sap.ui.layout"
          controllerName="de.nak.productlist.controller.Detail">


    <semantic:SemanticPage
            id="page"
            headerPinnable="false"
            toggleHeaderOnTitleClick="false"
            busy="{detailView>/busy}"
            busyIndicatorDelay="{detailView>/delay}">

        <semantic:titleHeading>
            <Title text="{product>Maktx}"/>
        </semantic:titleHeading>
        <semantic:headerContent>
            <FlexBox
                    alignItems="Start"
                    justifyContent="SpaceBetween">
                <Panel backgroundDesign="Transparent">
                    <ObjectAttribute
                            title="{i18n>productId}"
                            text="{product>Matnr}"/>
                    <ObjectAttribute
                            title="{i18n>stdPrice}"
                            text="{product>Stprs} {product>Waers}"/>
                </Panel>
                <!--<Panel backgroundDesign="Transparent">-->
                    <!--<ObjectNumber-->
                            <!--id="objectHeader"-->
                            <!--textAlign="End"-->
                            <!--unit="{product>Meins}"-->
                            <!--state="{-->
							<!--path: 'UnitsInStock',-->
							<!--formatter: '.formatter.quantityState'}"-->
                            <!--number="{-->
							<!--path: 'UnitsInStock',-->
							<!--formatter: '.formatter.numberUnit'}">-->
                    <!--</ObjectNumber>-->
                <!--</Panel>-->

            </FlexBox>
        </semantic:headerContent>
        <semantic:content>
            <l:VerticalLayout width="100%">
                <Panel
                        backgroundDesign="Transparent"
                        headerText="{i18n>generalInformation}">
                    <content>
                        <f:SimpleForm
                                minWidth="1024"
                                maxContainerCols="2"
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanL="3"
                                labelSpanM="3"
                                emptySpanL="4"
                                emptySpanM="4"
                                columnsL="1"
                                columnsM="1">
                            <f:content>
                                <Label text="{i18n>materialType}"/>
                                <Text text="{product>Mtart}"/>
                                <Label text="{i18n>branche}"/>
                                <Text text="{product>Mbrsh}"/>
                                <Label text="{i18n>sector}"/>
                                <Text text="{product>Spart}"/>
                            </f:content>
                        </f:SimpleForm>
                    </content>
                </Panel>
                <Panel
                        backgroundDesign="Transparent"
                        headerText="{i18n>technicalData}">
                    <content>
                        <f:SimpleForm
                                minWidth="1024"
                                maxContainerCols="2"
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanL="3"
                                labelSpanM="3"
                                emptySpanL="4"
                                emptySpanM="4"
                                columnsL="1"
                                columnsM="1">
                            <f:content>
                                <Label text="{i18n>length}"/>
                                <Text text="{product>Laeng} {product>Meabm}"/>
                                <Label text="{i18n>width}"/>
                                <Text text="{product>Breit} {product>Meabm}"/>
                                <Label text="{i18n>height}"/>
                                <Text text="{product>Hoehe} {product>Meabm}"/>
                            </f:content>
                        </f:SimpleForm>

                        <f:SimpleForm
                                minWidth="1024"
                                maxContainerCols="2"
                                editable="false"
                                layout="ResponsiveGridLayout"
                                labelSpanL="3"
                                labelSpanM="3"
                                emptySpanL="4"
                                emptySpanM="4"
                                columnsL="1"
                                columnsM="1">
                            <f:content>

                                <Label text="{i18n>grossWeight}"/>
                                <Text text="{product>Brgew} {product>Gewei}"/>
                                <Label text="{i18n>netWeight}"/>
                                <Text text="{product>Ntgew} {product>Gewei}"/>
                            </f:content>
                        </f:SimpleForm>
                    </content>
                </Panel>

            </l:VerticalLayout>


        </semantic:content>
        <semantic:editAction>
            <semantic:EditAction press="onSemanticButtonPress"/>
        </semantic:editAction>
    </semantic:SemanticPage>


