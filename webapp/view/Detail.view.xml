<mvc:View xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m"
          xmlns:f="sap.ui.layout.form"
          controllerName="de.nak.productlist.controller.Detail">

    <Page title="{i18n>detail.PageTitel}"
          showNavButton="true"
          navButtonPress="onNavButtonPress">
        <content>
            <Toolbar>
                <Title text="{i18n>detail.titel}" level="H2"/>
            </Toolbar>
            <f:SimpleForm layou="ResponsiveGridLayout">
                <f:content>
                    <Label text="{i18n>Name}" labelFor="inputName"/>
                    <Input id="inputName" value="{product>Matnr}" enabled="false"/>
                    <Label text="{i18n>Text}" labelFor="inputText"/>
                    <TextArea id="inputText" value="{product>Maktx}" width="100%" enabled="false"/>
                    <Label text="{i18n>Hotel}" labelFor="inputData"/>
                    <Input id="inputData" value="{product>Mtart}" enabled="false"/>
                </f:content>
            </f:SimpleForm>
        </content>
    </Page>

</mvc:View>
