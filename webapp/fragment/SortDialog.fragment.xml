<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <ViewSettingsDialog title="{i18n>sortDialog}" confirm="handleConfirm">

        <sortItems>
            <ViewSettingsItem text="{i18n>productId}" key="Matnr" selected="true" />
            <ViewSettingsItem text="{i18n>productName}" key="Maktx" />
            <ViewSettingsItem text="{i18n>unrestrictedStock}" key="Labst" />
            <ViewSettingsItem text="{i18n>productCategory}" key="Matkl" />
            <ViewSettingsItem text="{i18n>stdPrice}" key="Stprs" />
        </sortItems>

        <groupItems>
            <ViewSettingsItem text="{i18n>productCategory}" key="Matkl" />
            <ViewSettingsItem text="{i18n>stdPrice}" key="Stprs" />
        </groupItems>

    </ViewSettingsDialog>
</core:FragmentDefinition>